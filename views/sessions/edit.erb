<h1>Edit Session</h1>

<form method = "POST" action="/sessions/<%= @session.id%>">

  <div>
    <label for ="name-field">Name</label>
    <input class="new_form" type ="text" name ="name" id="name-field" value ="<%= @session.name %>" />
    <br />
  </div>

  <div class ="form_space">
    <label for="genre-field">Genre</label>
    <input class="new_form" type="text" name="genre" id="genre-field" value="<%= @session.genre %>" />
    <br />
  </div>

  <div class ="form_space">
    <label for="capacity-field"> Capacity</label>
    <input class="new_form" type="number" name="capacity" id="capacity-field" value="<%= @session.capacity %>" />
    <br />
  </div>

  <input class = "button1" type="submit" value="Edit Session" />

</form>
