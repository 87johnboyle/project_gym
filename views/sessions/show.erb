<h1><%= @session.name %></h1>

<table>
  <tr>

    <th>Genre</th>
    <th>Capacity</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>View</th>


  </tr>

  <tr>


    <td><%= @session.genre %></td>
    <td><%= @session.capacity %></td>
    <td> <form  class ="show_member_form" action="/sessions/<%= @session.id %>/edit">
        <input class ="show_member_input" type="submit" value="Edit Session" class="boxing-buttons"/>
      </form></td>
    <td>  <form class ="show_member_form" method="post" action="/sessions/<%= @session.id %>/delete">
        <input class ="show_member_input" type="submit" value="Delete Session"/>
      </form></td>
      <td>  <form  class ="show_member_form" action="/sessions/<%= @session.id %>/bookings">
          <input class ="show_member_input" type="submit" value="View Members"/>
        </form></td>
  </tr>
</table>



<% if @session.capacity > 0 %>

  <form  class ="show_member_form" action="/sessions/<%= @session.id %>/new_booking">
    <input class ="show_member_input" type="submit" value="Book Member"/>
  </form>

<% end %>
